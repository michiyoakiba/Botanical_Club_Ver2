<div class="container">
<h1 class="my-3 ml-3">Customers</h1>
<div class="row">
<div class="col-12">
<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col" style="width: 10%">Member ID</th>
      <th scope="col" style="width: 30%">Name</th>
      <th scope="col" style="width: 40%">Email</th>
      <th scope="col" style="width: 20%">Status</th>
    </tr>
  </thead>
  <% @customers.each do |customer| %>
  <tbody>
    <tr>
      <td><%= customer.id %></td>
      <td><%= link_to admin_customer_path(customer.id) do %>
        <%= customer.name %>
        <% end %>
        </td>
      <td><%= customer.email %></td>
