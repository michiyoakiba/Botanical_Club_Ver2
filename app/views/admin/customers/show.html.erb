<div class="container">
  <div class="row">
   <h3 class="my-4 ml-4 mt-8"><strong><%= @customer.name %></strong>'s member details</h3>
    <div class="col-10 mt-3 mx-auto">
      <table class="table table-borderless">
        <thead>
          <tr>
            <th scope="col" style="width: 10%">Member ID</th>
            <th scope="col" style="width: 10%">Name</th>
            <th scope="col" style="width: 10%">Email</th>
            <th scope="col" style="width: 10%"></th>
            <th scope="col" style="width: 10%"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @customer.id %></td>
            <td><%= @customer.name %></td>
            <td><%= @customer.email %></td>
            <td><%= link_to "Customers", admin_customers_path,class: "btn btn-outline-primary" %></td>
            <td><%= link_to "To edit", edit_admin_customer_path(@customer),class: "btn btn-outline-success" %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div> 
</div> 