<div class="container">
<div class="row">
<h2 class="my-3 ml-3 mt-10">Genres</h2>
<div class="col-7 mt-5 mx-auto">
<%= form_with model: [:admin,@genre] do |f| %>
  <% if @genre.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@genre.errors.count, "error") %> prohibited this obj from being saved:</h3>
      <ul>
        <% @genre.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<%= f.text_field :genre_name %>
<%= f.submit '新規登録' %>
<% end %>
</div>

<div class="col-6 mt-5 mx-auto">
<table class="table table-borderless">
  <thead>
    <tr>
      <th scope="col" style="width: 6%">Genre</th>
      <th scope="col" style="width: 10%"></th>
    </tr>
  </thead>
  <% @genres.each do |genre| %>
  <tbody>
    <tr>
      <td><%= genre.genre_name %></td>
      <td><%= link_to "編集",edit_admin_genre_path(genre) %></td>
    </tr>
  </tbody>
  <% end %>
</table>
</div>
</div>
</div>