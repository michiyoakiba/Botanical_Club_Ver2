<div class="container">
<div class="row">
<h1 class="my-3 ml-3">ジャンル一覧・追加</h1>
<div class="col-3"></div>
<div class="col-7">
<%= form_with model: [:admin,@genre] do |f| %>
  <% if @genre.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@genre.errors.count, "error") %> prohibited this obj from being saved:</h3>
      <ul>
        <% @genre.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<%= f.text_field :genre_name %>
<%= f.submit '新規登録' %>
<% end %>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col" style="width: 20%">ジャンル</th>
      <th scope="col" style="width: 80%"></th>
    </tr>
  </thead>
  <% @genres.each do |genre| %>
  <tbody>
    <tr>
      <td><%= genre.genre_name %></td>
      <td><%= link_to "編集",edit_admin_genre_path(genre) %></td>
    </tr>
  </tbody>
  <% end %>
</table>
</div>
</div>
</div>


<p>Find me in app/views/admin/genres/index.html.erb</p>
