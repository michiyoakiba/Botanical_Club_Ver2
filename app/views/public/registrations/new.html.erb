<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light py-4 mb-0">ユーザーサインアップ</h5>
      <div class="form-body p-4">
        <div class="mx-auto text-center">
            <p>メールアドレスと<br>パスワードを入力してください</p>
            </div>
        <%= form_with model: @customer, url: new_registration_path do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>    
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-user"></i></span>
            </div>
            <%= f.text_field :name, autofocus: true, class:"form-control", placeholder:"名前(全角または半角2文字以上)" %>
          </div>
          
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-envelope"></i></span>
            </div>
            <%= f.email_field :email, autofocus: true, class:"form-control", placeholder:"メールアドレス" %>
          </div>
          
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-lock"></i></span>
            </div class="form-group">
            <%= f.password_field :password, autofocus: true, class:"form-control", placeholder:"パスワード(半角6文字以上)" %>
          </div>
          
          
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-check-circle"></i></span>
            </div>
          <%= f.password_field :password_confirmation, autofocus: true, class:"form-control", placeholder:"パスワード確認(半角6文字以上)" %>
          </div>
          
          <%= f.submit "サインアップ", class:"btn btn-lg btn-block btn-outline-success mt-5" %>
        <% end %>
      </div>
    </div>
  </div>
</div>








