<% if current_customer != customer%>
  <% if current_user.following?(customer) %>
    <%= link_to "フォロー外す", user_relationships_path(customer.id), method: :delete, class: "btn btn-outline-info" %>
  <% else %>
    <%= link_to "フォローする", public_relationships_path(customer.id), method: :post, class: "btn btn-outline-success" %>
  <% end %>
<% end %>