<% if plant.favorited_by?(current_customer) %>
  <%= link_to public_plant_favorites_path(plant), method: :delete, class: "text-dark", remote: true do %> <!--remote: trueを追加-->
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= plant.favorites.count %>
  <% end %>
<% else %>
  <%= link_to public_plant_favorites_path(plant), method: :post, class: "text-dark", remote: true do %> <!--remote: trueを追加-->
    <i class="far fa-heart" aria-hidden="true"></i>
    <%= plant.favorites.count %>
  <% end %>
<% end %>