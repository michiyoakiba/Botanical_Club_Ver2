<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">投稿フォーム</h5>
      <div class="form-body p-4">
        <% if @plant.errors.any? %>
          <ul class="alert alert-danger" role="alert">
            <h6 class="alert-heading">
              <%= @plant.errors.count %>件のエラーが発生しました
            </h6>
            <% @plant.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <%= form_with model: [:public,@plant] do |f| %>
          <%= f.file_field :image, accept: "image/*", class: "w-100" %>
          <div class="form-group mt-4">
            <%= f.collection_select :genre_id, Genre.all, :id, :genre_name, { prompt: '--ジャンル--' }, class: "form-control" %>
          </div>
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-leaf"></i></span>
            </div>
            
            <%= f.text_field :plant_name, class:"form-control", placeholder:"植物名" %>
          </div>
          <%= f.text_area :caption, class:"form-control", rows:"3", placeholder:"コメントここに" %>
          <hr>
          <%= f.submit '投稿', class:"btn btn-lg btn-block btn-outline-success mt-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>